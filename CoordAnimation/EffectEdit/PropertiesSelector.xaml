<UserControl x:Class="CoordAnimation.PropertiesSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoordAnimation"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <StackPanel>
        <ComboBox Name="Types" SelectionChanged="Types_SelectionChanged"/>
        <local:PropertiesEditor Object="{Binding Object}"/>
    </StackPanel>
</UserControl>
