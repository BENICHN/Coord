<UserControl x:Class="CoordAnimation.PropertiesEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoordAnimation"
             mc:Ignorable="d" DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <DataGrid Name="Editors" AutoGenerateColumns="False" CanUserSortColumns="False" CanUserReorderColumns="False" HeadersVisibility="None" GridLinesVisibility="None" ItemsSource="{Binding Properties}">
        <DataGrid.Columns>
            <DataGridTextColumn Binding="{Binding Description, Mode=OneTime}" Foreground="White" IsReadOnly="True" Width="*"/>
            <DataGridTemplateColumn Width="2*">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <ContentPresenter Content="{Binding Editor, Mode=OneTime}" HorizontalAlignment="Left"/>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
        </DataGrid.Columns>
    </DataGrid>
</UserControl>
