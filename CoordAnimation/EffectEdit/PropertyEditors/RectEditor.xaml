<UserControl x:Class="CoordAnimation.RectEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoordAnimation"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="150">
    <Grid>
        <local:SizeEditor Size="{Binding RectSize, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Mode=TwoWay}"/>
        <TextBlock Text="●" FontSize="17" Margin="0, 17" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <local:PointEditor VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10, 35" Prefix="False" Point="{Binding RectOrigin, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Mode=TwoWay}"/>
    </Grid>
</UserControl>
