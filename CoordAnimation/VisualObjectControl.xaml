<UserControl x:Class="CoordAnimation.VisualObjectControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoordAnimation"
             xmlns:benlib="clr-namespace:BenLib.WPF;assembly=BenLib.WPF"
             mc:Ignorable="d">
    <DockPanel DataContext="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}, AncestorLevel=1}}">
        <local:VisualObjectIcon Type="{Binding ObjectType}" VerticalAlignment="Center"/>
        <benlib:SwitchableTextBox Margin="5,0,0,0" Text="{Binding ObjectName, Mode=TwoWay}" VerticalAlignment="Center" Resistant="True"/>
    </DockPanel>
</UserControl>
