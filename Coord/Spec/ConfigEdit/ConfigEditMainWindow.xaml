<Window x:Class="Coord.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:benlib="clr-namespace:BenLib.WPF;assembly=BenLib.WPF"
        xmlns:local="clr-namespace:Coord"
        mc:Ignorable="d"
        Title="Coord" Loaded="Window_Loaded" SizeToContent="WidthAndHeight" WindowState="Maximized" Closing="Window_Closing">
    <StackPanel>
        <Border Background="#2C3E50" Panel.ZIndex="1">
            <DockPanel HorizontalAlignment="Left">
                <Button Name="Point" Content="Point" Width="30" Height="30" Click="Button_Click"/>
                <Button Name="InTex" Content="InTex" Width="30" Height="30" Click="Button_Click"/>
                <Button Name="Line" Content="Line" Width="30" Height="30" Click="Button_Click"/>
            </DockPanel>
        </Border>
        <local:Plane x:Name="plane" Width="1920" Height="800" EnableSelectionRect="True" EnableMove="True" EnableSelection="True" EnableCharacterEvents="True" PreviewCharacterMouseDown="Plane_PreviewCharacterMouseDown" PreviewCharacterMouseMove="Plane_PreviewCharacterMouseMove" PreviewCharacterMouseUp="Plane_PreviewCharacterMouseUp"/>
    </StackPanel>
</Window>
